{
  "name": "ppjg",
  "version": "0.0.7",
  "description": "Small `package.json` generator for publishing by omitting development bloat",
  "scripts": {
    "build": "npm run verify && npm run bundle && npm run ppjg",
    "bundle:declarations": "tsc --p tsconfig.declaration.json",
    "bundle:sources": "webpack",
    "bundle": "npm run bundle:sources && npm run bundle:declarations",
    "eslint": "eslint",
    "lint:fix": "eslint . --fix",
    "ppjg": "node ./out/cli.js",
    "publish": "npm publish ./out",
    "test": "jest",
    "tsc": "tsc",
    "verify:lint": "eslint .",
    "verify:test": "npm t",
    "verify": "npm run verify:lint && npm run verify:test"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martingreilinger/ppjg.git"
  },
  "author": {
    "name": "Martin Greilinger",
    "email": "25162092+martingreilinger@users.noreply.github.com",
    "url": "https://github.com/martingreilinger"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/martingreilinger/ppjg/issues"
  },
  "homepage": "https://github.com/martingreilinger/ppjg#readme",
  "keywords": [
    "build",
    "tool",
    "package.json",
    "publish"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.4",
    "eslint": "^7.4.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "ts-loader": "^8.0.3",
    "typescript": "^3.9.7",
    "webpack": "^5.0.0-beta.29",
    "webpack-cli": "^3.3.12"
  }
}
