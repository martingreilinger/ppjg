{
  "name": "ppjg",
  "version": "1.0.0",
  "description": "Small package.json generator, used to generate a dedicated package.json for publishing your npm package",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "ppjg": "node ./out/index.js",
    "eslint": "eslint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "tsc": "tsc",
    "build": "npm run lint:fix && npm run tsc && npm run ppjg"
  },
  "husky": {
    "hooks": {
     "pre-commit": "npm run lint:fix"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martingreilinger/ppjg.git"
  },
  "author": {
    "name": "Martin Greilinger",
    "email": "25162092+martingreilinger@users.noreply.github.com",
    "url": "https://github.com/martingreilinger"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/martingreilinger/ppjg/issues"
  },
  "homepage": "https://github.com/martingreilinger/ppjg#readme",
  "devDependencies": {
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.4.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  }
}
